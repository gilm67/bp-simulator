// app/page.tsx
import Link from "next/link";
import { Suspense } from "react";
import { getJobs, jobSlug, type Job } from "@/lib/sheets";

export const revalidate = 60;

/** Small pill */
function Pill({ children }: { children: React.ReactNode }) {
  return (
    <span className="rounded-full border border-neutral-700/60 bg-neutral-900/60 px-3 py-1 text-xs text-neutral-300">
      {children}
    </span>
  );
}

/** Featured roles list */
async function FeaturedJobs() {
  const jobs = (await getJobs())
    .filter((j) => String(j.Active || "").toUpperCase() !== "FALSE")
    .slice(0, 6);

  if (jobs.length === 0) return null;

  return (
    <div className="mt-10 grid gap-6 sm:grid-cols-2">
      {jobs.map((job) => {
        const tags = [job.Location, job.Market, job.Seniority].filter(Boolean) as string[];
        return (
          <Link
            key={job.ID}
            href={`/jobs/${jobSlug(job)}`}
            className="group block rounded-2xl border border-white/20 
                       bg-white/5 p-6 shadow-lg backdrop-blur-sm 
                       transition hover:bg-white/10 hover:shadow-xl"
          >
            <h3 className="text-lg font-semibold text-white group-hover:text-emerald-400">
              {job.Title}
            </h3>
            <div className="mt-2 flex flex-wrap gap-2">
              {tags.map((t) => (
                <Pill key={t}>{t}</Pill>
              ))}
            </div>
          </Link>
        );
      })}
    </div>
  );
}

